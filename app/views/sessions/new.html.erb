<body class="dope_gif">
    <h1>Login</h1>

    <h4><%= flash[:notice] %></h4>
    <%= form_tag(login_path) do %>
            <p>Username: <%= text_field_tag :username %></p>
            <p>Password: <%= password_field_tag :password %></p>
        <%= submit_tag('Login', :class => "buttons" )%>
    <% end %>
    <%= button_to("Sign Up", new_user_path, method: "get", :class => "buttons") %>
</body>