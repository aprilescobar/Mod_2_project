<h1>Sign Up</h1>

<h4><%= flash[:notice] %></h4>
<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <h4><%= error %></h4>
    <% end %>
<% end %>

<%= form_for @user do |f| %>
    <p>Name: <%= f.text_field :name %></p>
    <p>Username: <%= f.text_field :username %></p>
    <p>Password: <%= f.password_field :password %></p>
<%= f.submit "Sign Up"%>
<% end %>
<%= button_to  "Log In", login_path, method: "get" %>